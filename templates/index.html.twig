{% extends 'base.html.twig' %}

{% block body %}

<nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav m-auto mb-2 mb-lg-0">
          
          <li class="nav-item">
            <a class="nav-link" href="{{path("app_index")}}">Home</a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link" href="{{path("app_jobs")}}">Jobs</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li>
        
          <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
          </li>
      
        </ul>
      
        <div class="d-flex">
          {% if app.user %}
            {% if 'ROLE_ADMIN' in app.user.roles %}
                <a href="{{ path('app_admin') }}" class="auth-btn">Admin</a>
            {% elseif 'ROLE_RECRUITER' in app.user.roles %}
                <a href="{{path("app_recruiter")}}" class="auth-btn">Account</a>
            {% elseif 'ROLE_USER' in app.user.roles %}
                <a href="{{path("app_account")}}" class="auth-btn">Account</a>
            {% endif %}
          {% else %}
            <a href="{{path("app_signup")}}" class="auth-btn">Register</a>
            <a href="{{path("app_login")}}" class="auth-btn">Login</a>
          {% endif %}
        </div>
      
      </div>
    </div>
</nav>

<div class="hero">
  <div class="overlay"></div>
  <div class="job-search">
    {{ form_start(form) }}
      <div class="d-flex">
        {{form_widget(form.job, {'attr' : {'class': 'search-bar form-control', 'placeholder':'Job title or keywords'}})}}
        {{form_widget(form.location, {'attr' : {'class': 'form-select'}})}}
        {{form_widget(form.search, {'attr' : {'class': 'btn search-btn', 'value':'Search'}})}}  
      </div>
    {{ form_end(form) }}

  </div>
</div>

{% endblock %}