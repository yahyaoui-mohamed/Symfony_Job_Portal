{% extends 'base.html.twig' %}

{% block body %}

	<nav class="navbar navbar-expand-lg">
		<div class="container">
			<a class="navbar-brand" href="{{path("app_index")}}">Navbar</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav m-auto mb-2 mb-lg-0">

					<li class="nav-item">
						<a class="nav-link" href="{{path("app_index")}}">Home</a>
					</li>

					<li class="nav-item">
						<a class="nav-link" href="{{path("app_jobs")}}">Jobs</a>
					</li>

					<li class="nav-item">
						<a class="nav-link" href="#">About</a>
					</li>

					<li class="nav-item">
						<a class="nav-link" href="#">Contact</a>
					</li>

				</ul>

				<div class="d-flex">
					{% if app.user %}
						{% if 'ROLE_ADMIN' in app.user.roles %}
							<a href="{{ path('app_admin') }}" class="auth-btn">Admin</a>
						{% elseif 'ROLE_RECRUITER' in app.user.roles %}
							<a href="{{path("app_recruiter")}}" class="auth-btn">Account</a>
						{% elseif 'ROLE_USER' in app.user.roles %}
						{% else %}
							<a href="{{path("app_account")}}" class="auth-btn">Account</a>
						{% endif %}
					{% else %}
						<a href="{{path("app_signup")}}" class="auth-btn" href=>Register</a>
						<a href="{{path("app_login")}}" class="auth-btn">Login</a>
					{% endif %}
				</div>

			</div>
		</div>
	</nav>
	<div class="slider">
		<div class="overlay"></div>
		<div class="slide-content">
			<h1>Apply for a job</h1>
		</div>
	</div>


	<div class="container">
		<div class="job-desc">
			<div class="row">
				<div class="col-lg-8">
        <h1 class="mb-5">Apply</h1>
          {{ form_start(form) }}
            <div class="row">
              <div class="col-lg-6 mb-3">
                {{ form_widget(form.nom, {'attr': {'class' : 'form-control', 'placeholder' : 'First name'}}) }}
              </div>
              <div class="col-lg-6 mb-3">
                  {{ form_widget(form.prenom, {'attr': {'class' : 'form-control', 'placeholder' : 'Last name'}}) }}
              </div>
              <div class="col-lg-6 mb-3">
                {{ form_widget(form.email, {'attr': {'class' : 'form-control', 'placeholder' : 'Email'}}) }}
              </div>
              <div class="col-lg-6 mb-3">
                {{ form_widget(form.telephone, {'attr': {'class' : 'form-control', 'placeholder' : 'Phone number'}}) }}
              </div>
              <div class="col-lg-6 mb-3">
                {{ form_row(form.cv, {'attr': {'class' : 'form-control', 'placeholder' : 'CV'}}) }}
              </div>
              <div class="col-lg-6 mb-3">
                {{ form_row(form.coverletter, {'attr': {'class' : 'form-control', 'placeholder' : 'CV'}}) }}
              </div>


              {{ form_widget(form.apply, {'attr': {'class' : 'btn btn-primary'}}) }}
            </div>
          {{ form_end(form) }}
			  </div>
			
        <div class="col-lg-4">
          <div class="job-overview">
            <h3>Job overview</h3>
            <ul>
              <li>Posted date :
              </li>
              <li>Location :
              </li>
              <li>Job nature :
              </li>
              <li>Salary :
              </li>
              <li>Salary :</li>
            </ul>
          </div>
        </div>

		</div>
	</div>
</div>{% endblock %}

